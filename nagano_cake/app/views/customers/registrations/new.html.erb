
<h2>新規登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"name","名前"%>
    </div>
    <div class="col-4">
      <%= f.label :"first_name","姓"%>
      <%= f.text_field :first_name, autocomplete: "fisrt_name" %>
      <%= f.label :"last_name","名"%>
      <%= f.text_field :first_name, autocomplete: "last_name" %>
    </div>
  </div>



  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"name","フリガナ"%>
    </div>
    <div class="col-4">
      <%= f.label :"kana_first_name","セイ"%>
      <%= f.text_field :first_name, autocomplete: "kana_fisrt_name" %>
      <%= f.label :"kana_last_name","メイ"%>
      <%= f.text_field :first_name, autocomplete: "kana_last_name" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"email","メールアドレス"%>
    </div>
    <div class="col-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"post_code","郵便番号(ハイフンなし)"%>
    </div>
    <div class="col-4">
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
    </div>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"adress","住所"%>
    </div>
    <div class="col-4">
      <%= f.text_field :adress,　autofocus: true, autocomplete: "email", :size=>"50" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"phone_number","電話番号(ハイフンなし)"%>
    </div>
    <div class="col-4">
      <%= f.text_field :phone_number,autofocus: true, autocomplete: "phone_number" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"password","パスワード(6文字以上)"%>
    </div>
    <div class="col-4">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"password_confirmation","パスワード(再確認)"%>
    </div>
    <div class="col-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-sm btn-primary" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <p><%= link_to "こちら",  new_customer_session_path %>からログインしてください</p>
    </div>
  </div>
</div>


<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>

