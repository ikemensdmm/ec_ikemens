<h1>会員情報編集</h1>
<%= form_with model:@customer, url:"customer/customers/#{@customer.id}", local:true do |f| %>
 <div class="form-group row">
    <div class="col-3">
      <%= f.label :"name","名前"%>
    </div>
    <div class="col-4">
      <%= f.label :"first_name","姓"%>
      <%= f.text_field :last_name, autocomplete: "fisrt_name" %>
      <%= f.label :"last_name","名"%>
      <%= f.text_field :first_name, autocomplete: "last_name" %>
    </div>
  </div>



  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"name","フリガナ"%>
    </div>
    <div class="col-4">
      <%= f.label :"kana_last_name","セイ"%>
      <%= f.text_field :kana_last_name, autocomplete: "kana_fisrt_name" %>
      <%= f.label :"kana_first_name","メイ"%>
      <%= f.text_field :kana_first_name, autocomplete: "kana_last_name" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"email","メールアドレス"%>
    </div>
    <div class="col-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"post_code","郵便番号(ハイフンなし)"%>
    </div>
    <div class="col-4">
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
    </div>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"address","住所"%>
    </div>
    <div class="col-4">
      <%= f.text_field :address,　autofocus: true, autocomplete: "email", :size=>"50" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-3">
      <%= f.label :"phone_number","電話番号(ハイフンなし)"%>
    </div>
    <div class="col-4">
      <%= f.text_field :phone_number,autofocus: true, autocomplete: "phone_number" %>
    </div>
  </div>
<% end %>