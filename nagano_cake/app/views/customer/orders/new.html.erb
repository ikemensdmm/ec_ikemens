<div class="container">
  <h2 class="title">注文情報入力</h2>
    <div class= "row">
  <div class="col-md-10 offset-md-2">
  <%= form_with model: @order, url:customer_orders_confirmation_path, local: true do |f| %>

  <h5 class="payment_method">支払い方法</h5>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></br>
  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

    <h5 class="address_type">お届け先</h5>
    <div class="radio-inline">
      <%= f.radio_button :select_address, "0", checked: "checked" %>
      <%= f.label :ご自身の住所, class: "address_type_label" %></br>
      <p>
      <%= @customer.post_code %>
      <%= @customer.address %></br>
      <%= @customer.last_name%><%= @customer.first_name%>
      </p>
    </div>

    <div class="radio-inline">
      <%= f.radio_button :select_address, "1" %>
      <%= f.label :登録済住所から選択, class: "address_type_label" %></br>
      <%= f.select(:address_id, Address.all.map {|address|[address.address, address.id] }, class: "col-md-6 form-control") %>
    </div>
    <div class="radio-inline">
      <%= f.radio_button :select_address, "2" %>
      <%= f.label :新しいお届け先, class: "address_type_label" %></br>

  <table>
    <tr>
      <td><p><%= f.label :post_code, '郵便番号(ハイフンなし）' %></td>
      <td><p><%= f.text_field :post_code ,placeholder: "0000000"%></p></td>
    </tr>
    <tr>
      <td><p><%= f.label :address, '住所' %></td>
      <td><%= f.text_field :address ,placeholder: "東京都渋谷区代々木神園町0-0"%></p></td>
    </tr>
    <tr>
      <td><p><%= f.label :name, '宛名' %></td>
      <td><%= f.text_field :name ,placeholder: "令和 道子"%></p></td>
  </table>

      <%= f.submit '確認画面へ進む' ,class: 'btn btn-success'%>
    </div>
  </div>
</div>
<% end %>