<div class="container">
<h1>注文情報確認画面</h1>
<div class= "row">
<table class="table table-bordered">
  <thead>
    <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </thead>
  <tbody>
      <% @items_payment = 0 %>
      <% @shipping = 800 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
        　<td>
            <%= attachment_image_tag cart_item.item, :image, :fill, 80, 80 %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.price_tax %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= cart_item.subtotal%></td>
          <% @items_payment +=  cart_item.subtotal %>
      <% end %>
  </tbody>
 </table>

 <table class="table table-bordered">
  <thead>
      <th>送料</th>
      <th>商品合計</th>
      <th>請求額</th>
    </thead>
    <tbody>
    　<td><%= @shipping %></td>
    　<td><%= @items_payment %></td>
    　<td><%= @shipping + @items_payment %></td>
　　</tbody>
　</table>

<h5>支払方法
  <%= @order.payment_method_i18n %>
</h5></br>
<h5>お届け先
  〒<%= @order.post_code %>
  <%= @order.address %></br>
  <%= @order.name %>
</h5>

<%= form_with model: @order, url: customer_orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :post_code, :value => @order.post_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :shipping, :value => @order.shipping %>
  <%= f.hidden_field :billing_amount, :value => @items_payment %>
  <%= f.hidden_field :status, :value => @order.status %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.submit '注文を確定する' ,class: 'btn btn-success'%>
<% end %>
  </div>
</div>