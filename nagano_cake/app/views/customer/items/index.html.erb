<div class="container">
  <div class="row">
    <div class="col-9">
      <h2>商品一覧</h2><p>（全<%= @item_count %>件）</p>
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-eq-height">
          <% @items.each do |item| %>
          <div class="col">
            <div class="card mx-auto mt-4">
              <%= link_to item_path(item) do %>
              <%= attachment_image_id item, :image, size:"200x200", class:"card-img-top", fallback:"no-img.png" %>
              <% end %>
              <div class="card-body">
                <div class="card-title">
                  <%= link_to item.name, item_path(item), class:"text-dark" %>
                </div>
                <div class="card-text">
                  <%= "¥"+(item.price).to_s(:delmited) %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="d-flex pagenation justify-content-center mt-3">
        <%= paginate @item_page %>
      </div>
    </div>
  </div>
</div>