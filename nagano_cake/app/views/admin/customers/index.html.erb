<main>
    <div class="col-md-8 offset-md-1">
      <div class="py-4">
        <h3>会員一覧</h3>
      </div>
    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= customer.id %>
        </td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %> <%= customer.first_name %>
          <% end %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
          <% if customer.is_withdrawal == true %>
            <p class="text-secondary">退会</p>
          <% elsif customer.is_withdrawal == false %>
            <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
    <% end %>
    <div class="mb-5"><%= paginate(@customers) %></div>
  </tbody>
  </table>
    </div>
  </div>
</div>
</main>