<div class="container">
  <div class="row">
    <div class="col-md-8 my-5">
      <h4>商品詳細</h4>
    </div>
  </div>
  <div class="row">
  <div class="col-md-10">
    <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %>
      <table class="table table-borderless">
        <tbody>
         <tr>
          <td width="20%">商品名</td>
          <td width="30%"><%= @item.name %></td>
          <td width="50%"></td>
         </tr>
         <tr>
          <td>商品説明</td>
          <td><%= @item.name %></td>
          <td></td>
         </tr>
         <tr>
           <td>ジャンル</td>
           <td><%= @item.description %></td>
           <td></td>
         </tr>
         <tr>
          <td>税込み価格</td>
          <td>(税抜き価格)</td>
          <td><%= @item.price %></td>
          <td></td>
         </tr>
         <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_status == true %>
            <p class="text-secondary">販売中</p>
            <% elsif @item.is_status == false %>
            <p class="text-success">販売停止中</p>
            <% end %>
          </td>
          <td></td>
         </tr>
         <tr>
          <td><%= link_to "　編集する　", edit_admin_item_path(@item.id), class: 'btn btn-success' %></td>
         </tr>
        </tbody>
      </table>
     </div>
    </div>
  </div>