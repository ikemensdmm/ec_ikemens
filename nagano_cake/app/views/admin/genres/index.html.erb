<div class="container">

  <div class="row">
    <h5 style="background-color:#f0f0f0; width:280px; padding:0px 40px; margin:30px 0 30px 0">ジャンル一覧・追加</h5>
  </div>

  <div class="row">
  <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
    <label>ジャンル名</label>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: "btn btn-success" %>
  <% end %>
  </div>

  <div class="row">
    <div class="col-lg-8 col-lg-offset-4">
    　<table class="table">
      	<thead style="background-color:#f0f0f0;">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>